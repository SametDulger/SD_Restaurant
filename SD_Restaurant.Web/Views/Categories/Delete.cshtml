@model SD_Restaurant.Web.Models.CategoryViewModel

@{
    ViewData["Title"] = "Kategori Sil";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Kategori Sil</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4>Bu kategoriyi silmek istediğinizden emin misiniz?</h4>
                    </div>
                    
                    <dl class="row">
                        <dt class="col-sm-2">ID</dt>
                        <dd class="col-sm-10">@Model.Id</dd>
                        
                        <dt class="col-sm-2">Kategori Adı</dt>
                        <dd class="col-sm-10">@Model.Name</dd>
                        
                        <dt class="col-sm-2">Açıklama</dt>
                        <dd class="col-sm-10">@Model.Description</dd>
                    </dl>
                    
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Sil" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 