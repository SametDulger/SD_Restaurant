@model SD_Restaurant.Web.Models.ProductViewModel

@{
    ViewData["Title"] = "Ürün Detayı";
}

<div class="container-fluid fade-in">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-gradient">
                        <i class="fas fa-box me-2"></i>Ürün Detayı
                    </h1>
                    <p class="text-muted mb-0">@Model.Name ürün bilgileri</p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>Düzenle
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>@Model.Name Bilgileri
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4 text-muted">Ürün ID:</dt>
                                <dd class="col-sm-8"><strong>@Model.Id</strong></dd>

                                <dt class="col-sm-4 text-muted">Ürün Adı:</dt>
                                <dd class="col-sm-8"><strong>@Model.Name</strong></dd>

                                <dt class="col-sm-4 text-muted">Kategori:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">@Model.CategoryName</span>
                                </dd>

                                <dt class="col-sm-4 text-muted">Fiyat:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-success">@Model.Price.ToString("C")</span>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4 text-muted">Birim:</dt>
                                <dd class="col-sm-8">@Model.Unit</dd>

                                <dt class="col-sm-4 text-muted">Stok Konumu:</dt>
                                <dd class="col-sm-8">@Model.StockLocation</dd>

                                <dt class="col-sm-4 text-muted">Reçete Var mı:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsRecipe)
                                    {
                                        <span class="badge bg-warning"><i class="fas fa-check me-1"></i>Evet</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary"><i class="fas fa-times me-1"></i>Hayır</span>
                                    }
                                </dd>

                                <dt class="col-sm-4 text-muted">Aktif mi:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success"><i class="fas fa-check me-1"></i>Evet</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger"><i class="fas fa-times me-1"></i>Hayır</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mt-4">
                            <h5 class="text-primary">ğŸ“ Açıklama</h5>
                            <div class="bg-light p-3 rounded">
                                @Model.Description
                            </div>
                        </div>
                    }

                    <div class="mt-4">
                        <dl class="row">
                            <dt class="col-sm-3 text-muted">Oluşturulma Tarihi:</dt>
                            <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>

                            @if (Model.UpdatedDate.HasValue)
                            {
                                <dt class="col-sm-3 text-muted">Güncellenme Tarihi:</dt>
                                <dd class="col-sm-9">@Model.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                            }
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2"></i>Ürün İstatistikleri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="display-4 text-primary">@Model.Price.ToString("C")</div>
                        <div class="text-muted">Satış Fiyatı</div>
                    </div>
                    
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Kategori</span>
                            <span class="badge bg-info">@Model.CategoryName</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Birim</span>
                            <span class="badge bg-secondary">@Model.Unit</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Reçete</span>
                            @if (Model.IsRecipe)
                            {
                                <span class="badge bg-warning">Var</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Yok</span>
                            }
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Durum</span>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Pasif</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-tools me-2"></i>Hızlı İşlemler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class="fas fa-edit me-2"></i>Ürün Düzenle
                        </a>
                        @if (Model.IsRecipe)
                        {
                            <a asp-controller="Recipes" asp-action="Index" asp-route-productId="@Model.Id" class="btn btn-outline-info">
                                <i class="fas fa-book-open me-2"></i>Reçete Görüntüle
                            </a>
                        }
                        <a asp-controller="Stocks" asp-action="Index" asp-route-productId="@Model.Id" class="btn btn-outline-success">
                            <i class="fas fa-warehouse me-2"></i>Stok Durumu
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 


