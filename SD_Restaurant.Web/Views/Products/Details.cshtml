@model SD_Restaurant.Web.Models.ProductViewModel

@{
    ViewData["Title"] = "Ürün Detayı";
}

<div class="container">
    <h2>Ürün Detayı</h2>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@Model.Name</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Ürün ID:</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                        <dt class="col-sm-3">Açıklama:</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Fiyat:</dt>
                        <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                        <dt class="col-sm-3">Birim:</dt>
                        <dd class="col-sm-9">@Model.Unit</dd>

                        <dt class="col-sm-3">Kategori:</dt>
                        <dd class="col-sm-9">@Model.CategoryName</dd>

                        <dt class="col-sm-3">Stok Konumu:</dt>
                        <dd class="col-sm-9">@Model.StockLocation</dd>

                        <dt class="col-sm-3">Reçete Var mı:</dt>
                        <dd class="col-sm-9">@(Model.IsRecipe ? "Evet" : "Hayır")</dd>

                        <dt class="col-sm-3">Aktif mi:</dt>
                        <dd class="col-sm-9">@(Model.IsActive ? "Evet" : "Hayır")</dd>

                        <dt class="col-sm-3">Oluşturulma Tarihi:</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>

                        @if (Model.UpdatedDate.HasValue)
                        {
                            <dt class="col-sm-3">Güncellenme Tarihi:</dt>
                            <dd class="col-sm-9">@Model.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Sil</a>
    </div>
</div> 