@model List<SD_Restaurant.Web.Models.ProductViewModel>

@{
    ViewData["Title"] = "Ürünler";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-dark">
                <i class="fas fa-utensils me-2"></i>Ürünler
            </h1>
            <p class="text-muted">Restaurant ürünlerinin yönetimi</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Yeni Ürün
            </a>
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search Bar -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" name="searchTerm" class="form-control" placeholder="Ürün adı ile ara..." 
                               value="@ViewBag.SearchTerm">
                        <button type="submit" class="btn btn-outline-primary">Ara</button>
                    </div>
                </div>
                <div class="col-md-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Temizle
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Products Grid -->
    <div class="row">
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var product in Model)
            {
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow-sm h-100 py-2">
                        <div class="card-body">
                            <div class="row g-0 align-items-center">
                                <div class="col me-2">
                                    <div class="small fw-bold text-primary text-uppercase mb-1">
                                        @product.Name
                                    </div>
                                    <div class="h6 mb-0 fw-bold text-dark">
                                        @product.Price.ToString("C")
                                    </div>
                                    <div class="small text-muted">
                                        @product.Unit
                                    </div>
                                    @if (!string.IsNullOrEmpty(product.CategoryName))
                                    {
                                        <div class="small text-muted">
                                            <i class="fas fa-tag me-1"></i>@product.CategoryName
                                        </div>
                                    }
                                    <div class="mt-2">
                                        @if (product.IsActive)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Pasif</span>
                                        }
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-utensils fa-2x text-muted"></i>
                                </div>
                            </div>
                            <div class="mt-3">
                                <div class="btn-group btn-group-sm w-100" role="group">
                                    <a asp-action="Details" asp-route-id="@product.Id" 
                                       class="btn btn-outline-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@product.Id" 
                                       class="btn btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@product.Id" 
                                       class="btn btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-utensils fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Henüz ürün bulunmuyor</h5>
                        <p class="text-muted">İlk ürününüzü eklemek için aşağıdaki butonu kullanın.</p>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Yeni Ürün Ekle
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Statistics Cards -->
    @if (Model != null && Model.Count > 0)
    {
        <div class="row mt-4">
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow-sm h-100 py-2">
                    <div class="card-body">
                        <div class="row g-0 align-items-center">
                            <div class="col me-2">
                                <div class="small fw-bold text-success text-uppercase mb-1">
                                    Toplam Ürün
                                </div>
                                <div class="h5 mb-0 fw-bold text-dark">
                                    @Model.Count()
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-utensils fa-2x text-muted"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-info shadow-sm h-100 py-2">
                    <div class="card-body">
                        <div class="row g-0 align-items-center">
                            <div class="col me-2">
                                <div class="small fw-bold text-info text-uppercase mb-1">
                                    Aktif Ürün
                                </div>
                                <div class="h5 mb-0 fw-bold text-dark">
                                    @Model.Count(p => p.IsActive)
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-check-circle fa-2x text-muted"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow-sm h-100 py-2">
                    <div class="card-body">
                        <div class="row g-0 align-items-center">
                            <div class="col me-2">
                                <div class="small fw-bold text-warning text-uppercase mb-1">
                                    Ortalama Fiyat
                                </div>
                                <div class="h5 mb-0 fw-bold text-dark">
                                    @(Model.Any() ? Model.Average(p => p.Price).ToString("C") : "₺0.00")
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-dollar-sign fa-2x text-muted"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-danger shadow-sm h-100 py-2">
                    <div class="card-body">
                        <div class="row g-0 align-items-center">
                            <div class="col me-2">
                                <div class="small fw-bold text-danger text-uppercase mb-1">
                                    Kategoriler
                                </div>
                                <div class="h5 mb-0 fw-bold text-dark">
                                    @Model.Select(p => p.CategoryName).Distinct().Count()
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-tags fa-2x text-muted"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-refresh search results
        $(document).ready(function() {
            $('input[name="searchTerm"]').on('keyup', function() {
                if ($(this).val().length >= 3) {
                    $(this).closest('form').submit();
                }
            });
        });
    </script>
} 


