@model SD_Restaurant.Web.Models.RecipeViewModel

@{
    ViewData["Title"] = "Tarif Sil";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Tarif Sil</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4>Bu tarifi silmek istediğinizden emin misiniz?</h4>
                    </div>
                    <dl class="row">
                        <dt class="col-sm-2">ID</dt>
                        <dd class="col-sm-10">@Model.Id</dd>
                        <dt class="col-sm-2">Ürün ID</dt>
                        <dd class="col-sm-10">@Model.ProductId</dd>
                        <dt class="col-sm-2">Malzeme Adı</dt>
                        <dd class="col-sm-10">@Model.IngredientName</dd>
                        <dt class="col-sm-2">Miktar</dt>
                        <dd class="col-sm-10">@Model.Quantity</dd>
                        <dt class="col-sm-2">Birim</dt>
                        <dd class="col-sm-10">@Model.Unit</dd>
                        <dt class="col-sm-2">Talimatlar</dt>
                        <dd class="col-sm-10">@Model.Instructions</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Sil" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 