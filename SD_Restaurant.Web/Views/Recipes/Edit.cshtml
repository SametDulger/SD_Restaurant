@model SD_Restaurant.Web.Models.RecipeViewModel

@{
    ViewData["Title"] = "Tarif Düzenle";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Tarif Düzenle</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ProductId" class="form-label">Ürün ID</label>
                                    <input asp-for="ProductId" class="form-control" />
                                    <span asp-validation-for="ProductId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="IngredientName" class="form-label">Malzeme Adı</label>
                                    <input asp-for="IngredientName" class="form-control" />
                                    <span asp-validation-for="IngredientName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Quantity" class="form-label">Miktar</label>
                                    <input asp-for="Quantity" class="form-control" />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Unit" class="form-label">Birim</label>
                                    <input asp-for="Unit" class="form-control" />
                                    <span asp-validation-for="Unit" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Instructions" class="form-label">Talimatlar</label>
                            <textarea asp-for="Instructions" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Instructions" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <input type="submit" value="Güncelle" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 


