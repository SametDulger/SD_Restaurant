@model SD_Restaurant.Web.Models.StockViewModel

@{
    ViewData["Title"] = "Stok Detayı";
}

<div class="container">
    <h2>Stok Detayı</h2>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@Model.ProductName</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Stok ID:</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                        <dt class="col-sm-3">Ürün:</dt>
                        <dd class="col-sm-9">@Model.ProductName</dd>

                        <dt class="col-sm-3">Miktar:</dt>
                        <dd class="col-sm-9">@Model.Quantity</dd>

                        <dt class="col-sm-3">Birim:</dt>
                        <dd class="col-sm-9">@Model.Unit</dd>

                        <dt class="col-sm-3">Konum:</dt>
                        <dd class="col-sm-9">@Model.Location</dd>

                        <dt class="col-sm-3">Minimum Stok:</dt>
                        <dd class="col-sm-9">@Model.MinimumStock</dd>

                        <dt class="col-sm-3">Maksimum Stok:</dt>
                        <dd class="col-sm-9">@Model.MaximumStock</dd>

                        <dt class="col-sm-3">Birim Fiyat:</dt>
                        <dd class="col-sm-9">@Model.UnitPrice.ToString("C")</dd>

                        <dt class="col-sm-3">Aktif mi:</dt>
                        <dd class="col-sm-9">@(Model.IsActive ? "Evet" : "Hayır")</dd>

                        <dt class="col-sm-3">Oluşturulma Tarihi:</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>

                        @if (Model.UpdatedDate.HasValue)
                        {
                            <dt class="col-sm-3">Güncellenme Tarihi:</dt>
                            <dd class="col-sm-9">@Model.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Sil</a>
    </div>
</div> 