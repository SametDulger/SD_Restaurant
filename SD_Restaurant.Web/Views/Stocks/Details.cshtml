@model SD_Restaurant.Web.Models.StockViewModel

@{
    ViewData["Title"] = "Stok Detayı";
}

<div class="container-fluid fade-in">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-gradient">
                        <i class="fas fa-warehouse me-2"></i>Stok Detayı
                    </h1>
                    <p class="text-muted mb-0">@Model.ProductName stok bilgileri</p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>Düzenle
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>@Model.ProductName Stok Bilgileri
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4 text-muted">Stok ID:</dt>
                                <dd class="col-sm-8"><strong>@Model.Id</strong></dd>

                                <dt class="col-sm-4 text-muted">Ürün:</dt>
                                <dd class="col-sm-8"><strong>@Model.ProductName</strong></dd>

                                <dt class="col-sm-4 text-muted">Miktar:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">@Model.Quantity @Model.Unit</span>
                                </dd>

                                <dt class="col-sm-4 text-muted">Konum:</dt>
                                <dd class="col-sm-8">@Model.Location</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4 text-muted">Minimum Stok:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-warning">@Model.MinimumStock @Model.Unit</span>
                                </dd>

                                <dt class="col-sm-4 text-muted">Maksimum Stok:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-success">@Model.MaximumStock @Model.Unit</span>
                                </dd>

                                <dt class="col-sm-4 text-muted">Birim Fiyat:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-primary">@Model.UnitPrice.ToString("C")</span>
                                </dd>

                                <dt class="col-sm-4 text-muted">Aktif mi:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success"><i class="fas fa-check me-1"></i>Evet</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger"><i class="fas fa-times me-1"></i>Hayır</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <div class="mt-4">
                        <dl class="row">
                            <dt class="col-sm-3 text-muted">Oluşturulma Tarihi:</dt>
                            <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>

                            @if (Model.UpdatedDate.HasValue)
                            {
                                <dt class="col-sm-3 text-muted">Güncellenme Tarihi:</dt>
                                <dd class="col-sm-9">@Model.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                            }
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2"></i>Stok İstatistikleri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="display-4 text-primary">@Model.Quantity</div>
                        <div class="text-muted">Mevcut Stok (@Model.Unit)</div>
                    </div>
                    
                    <div class="progress mb-3">
                        @{
                            var stockPercentage = Model.MaximumStock > 0 ? (Model.Quantity * 100m / Model.MaximumStock) : 0m;
                            var progressClass = stockPercentage switch
                            {
                                >= 80m => "success",
                                >= 50m => "warning",
                                >= 20m => "info",
                                _ => "danger"
                            };
                        }
                        <div class="progress-bar bg-@progressClass" role="progressbar" 
                             style="width: @(stockPercentage)%" 
                             aria-valuenow="@Model.Quantity" 
                             aria-valuemin="0" 
                             aria-valuemax="@Model.MaximumStock">
                            @(stockPercentage.ToString("F1"))%
                        </div>
                    </div>
                    
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Minimum Stok</span>
                            <span class="badge bg-warning">@Model.MinimumStock</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Maksimum Stok</span>
                            <span class="badge bg-success">@Model.MaximumStock</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Birim Fiyat</span>
                            <span class="badge bg-primary">@Model.UnitPrice.ToString("C")</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Durum</span>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Pasif</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-tools me-2"></i>Hızlı İşlemler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class="fas fa-edit me-2"></i>Stok Düzenle
                        </a>
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-outline-info">
                            <i class="fas fa-box me-2"></i>Ürün Detayı
                        </a>
                        <button class="btn btn-outline-success" onclick="updateStockQuantity(@Model.Id)">
                            <i class="fas fa-plus me-2"></i>Stok Güncelle
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function updateStockQuantity(stockId) {
    const newQuantity = prompt("Yeni stok miktarını girin:");
    if (newQuantity && !isNaN(newQuantity)) {
        // Burada AJAX ile stok güncelleme işlemi yapılabilir
        alert("Stok miktarı güncellendi: " + newQuantity);
    }
}
</script> 


