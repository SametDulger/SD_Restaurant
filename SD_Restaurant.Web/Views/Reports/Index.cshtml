@{
    ViewData["Title"] = "Raporlar";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="fas fa-chart-bar me-2"></i>Raporlar
                </h1>
                <div>
                    <a href="#" class="btn btn-outline-secondary" onclick="window.print()">
                        <i class="fas fa-print me-1"></i>Yazdır
                    </a>
                </div>
            </div>
            <p class="text-muted">Restaurant yönetim sistemi raporları ve analizler</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Satış Raporları -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-chart-pie fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title">Satış Raporları</h5>
                    <p class="card-text text-muted">Günlük, haftalık ve aylık satış analizleri</p>
                    <div class="mt-auto">
                        <a asp-action="Sales" class="btn btn-primary w-100">
                            <i class="fas fa-eye me-1"></i>Görüntüle
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Müşteri Analizi -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-users fa-3x text-success"></i>
                    </div>
                    <h5 class="card-title">Müşteri Analizi</h5>
                    <p class="card-text text-muted">Müşteri davranışları ve segmentasyon</p>
                    <div class="mt-auto">
                        <a asp-action="CustomerAnalysis" class="btn btn-success w-100">
                            <i class="fas fa-eye me-1"></i>Görüntüle
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stok Raporları -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-warehouse fa-3x text-warning"></i>
                    </div>
                    <h5 class="card-title">Stok Raporları</h5>
                    <p class="card-text text-muted">Stok durumu ve uyarılar</p>
                    <div class="mt-auto">
                        <a asp-action="Stock" class="btn btn-warning w-100">
                            <i class="fas fa-eye me-1"></i>Görüntüle
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Rezervasyon Raporları -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-calendar fa-3x text-info"></i>
                    </div>
                    <h5 class="card-title">Rezervasyon Raporları</h5>
                    <p class="card-text text-muted">Rezervasyon analizleri ve trendler</p>
                    <div class="mt-auto">
                        <a asp-action="Reservations" class="btn btn-info w-100">
                            <i class="fas fa-eye me-1"></i>Görüntüle
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı İndirme Bölümü -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-download me-2"></i>Rapor İndirme
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <a asp-action="Download" asp-route-reportType="sales" class="btn btn-outline-primary w-100">
                                <i class="fas fa-file-csv me-1"></i>Satış Raporu (CSV)
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="Download" asp-route-reportType="customers" class="btn btn-outline-success w-100">
                                <i class="fas fa-file-csv me-1"></i>Müşteri Raporu (CSV)
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="Download" asp-route-reportType="stock" class="btn btn-outline-warning w-100">
                                <i class="fas fa-file-csv me-1"></i>Stok Raporu (CSV)
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="Download" asp-route-reportType="reservations" class="btn btn-outline-info w-100">
                                <i class="fas fa-file-csv me-1"></i>Rezervasyon Raporu (CSV)
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- İstatistikler -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>Genel İstatistikler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <div class="text-center">
                                <h3 class="text-primary mb-1">0</h3>
                                <p class="text-muted mb-0">Toplam Sipariş</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <h3 class="text-success mb-1">0</h3>
                                <p class="text-muted mb-0">Toplam Müşteri</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <h3 class="text-warning mb-1">0</h3>
                                <p class="text-muted mb-0">Düşük Stok</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <h3 class="text-info mb-1">0</h3>
                                <p class="text-muted mb-0">Bugünkü Rezervasyon</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Sayfa yüklendiğinde istatistikleri güncelle
        $(document).ready(function() {
            // Burada AJAX ile gerçek verileri çekebilirsiniz
            console.log('Raporlar sayfası yüklendi');
        });
    </script>
} 

