@model SD_Restaurant.Web.Models.StockReportViewModel

@{
    ViewData["Title"] = "Stok Raporları";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0">
                        <i class="fas fa-warehouse me-2"></i>Stok Raporları
                    </h1>
                    <p class="text-muted mb-0">Stok durumu ve uyarı analizi</p>
                </div>
                <div>
                    <a asp-action="Download" asp-route-reportType="stock" class="btn btn-outline-warning">
                        <i class="fas fa-download me-1"></i>CSV İndir
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-opacity-10 rounded p-3">
                                <i class="fas fa-boxes fa-2x text-primary"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h4 class="mb-1">@Model.TotalItems</h4>
                            <p class="text-muted mb-0">Toplam Ürün</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-opacity-10 rounded p-3">
                                <i class="fas fa-check-circle fa-2x text-success"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h4 class="mb-1">@Model.HealthyStockItems</h4>
                            <p class="text-muted mb-0">Sağlıklı Stok</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-warning bg-opacity-10 rounded p-3">
                                <i class="fas fa-exclamation-triangle fa-2x text-warning"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h4 class="mb-1">@Model.LowStockItems</h4>
                            <p class="text-muted mb-0">Düşük Stok</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-danger bg-opacity-10 rounded p-3">
                                <i class="fas fa-times-circle fa-2x text-danger"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h4 class="mb-1">@Model.OutOfStockItems</h4>
                            <p class="text-muted mb-0">Stok Tükendi</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Grafikler -->
    <div class="row g-4 mb-4">
        <div class="col-xl-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-pie me-2"></i>Stok Durumu Dağılımı
                    </h5>
                </div>
                <div class="card-body">
                    <canvas id="stockStatusChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>

        <div class="col-xl-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>Stok Değeri Analizi
                    </h5>
                </div>
                <div class="card-body">
                    <canvas id="stockValueChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Stok Uyarıları -->
    @if (Model.LowStockItems > 0 || Model.OutOfStockItems > 0)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="fas fa-exclamation-triangle me-2 text-warning"></i>Stok Uyarıları
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            @foreach (var stock in Model.Stocks.Where(s => s.Quantity <= s.MinimumStockLevel).Take(6))
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="alert alert-@(stock.Quantity == 0 ? "danger" : "warning") mb-0">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-@(stock.Quantity == 0 ? "times-circle" : "exclamation-triangle") me-2"></i>
                                            <div>
                                                <strong>@stock.ProductName</strong>
                                                <br>
                                                <small>Mevcut: @stock.Quantity | Minimum: @stock.MinimumStockLevel</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Stok Listesi -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>Stok Listesi
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Stocks.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Ürün</th>
                                        <th>Miktar</th>
                                        <th>Minimum Seviye</th>
                                        <th>Konum</th>
                                        <th>Durum</th>
                                        <th>Son Güncelleme</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var stock in Model.Stocks.Take(15))
                                    {
                                        <tr>
                                            <td>@stock.ProductName</td>
                                            <td>@stock.Quantity</td>
                                            <td>@stock.MinimumStockLevel</td>
                                            <td>@stock.Location</td>
                                            <td>
                                                @{
                                                    var stockPercentage = stock.MaximumStock > 0 ? (stock.Quantity * 100m / stock.MaximumStock) : 0m;
                                                    var statusClass = stockPercentage switch
                                                    {
                                                        >= 80m => "success",
                                                        >= 50m => "warning",
                                                        >= 20m => "info",
                                                        _ => "danger"
                                                    };
                                                    var statusText = stockPercentage switch
                                                    {
                                                        >= 80m => "Yüksek",
                                                        >= 50m => "Normal",
                                                        >= 20m => "Düşük",
                                                        _ => "Kritik"
                                                    };
                                                }
                                                <span class="badge bg-@statusClass">@statusText</span>
                                            </td>
                                            <td>@stock.LastUpdated.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                <a asp-controller="Stocks" asp-action="Details" asp-route-id="@stock.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-warehouse fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Henüz stok verisi bulunmuyor</h5>
                            <p class="text-muted">Sistemde kayıtlı stok bulunamadı.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $(document).ready(function() {
            // Stok durumu pasta grafiği
            const stockStatusCtx = document.getElementById('stockStatusChart').getContext('2d');
            new Chart(stockStatusCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Sağlıklı', 'Düşük', 'Tükendi'],
                    datasets: [{
                        data: [@Model.HealthyStockItems, @Model.LowStockItems, @Model.OutOfStockItems],
                        backgroundColor: [
                            '#28a745',
                            '#ffc107',
                            '#dc3545'
                        ],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });

            // Stok değeri çubuk grafiği
            const stockValueCtx = document.getElementById('stockValueChart').getContext('2d');
            new Chart(stockValueCtx, {
                type: 'bar',
                data: {
                    labels: ['Sağlıklı Stok', 'Düşük Stok', 'Tükenen Stok'],
                    datasets: [{
                        label: 'Stok Değeri (₺)',
                        data: [@(Model.Stocks.Where(s => s.Quantity > s.MinimumStockLevel).Sum(s => s.Quantity * s.UnitPrice)), 
                               @(Model.Stocks.Where(s => s.Quantity <= s.MinimumStockLevel && s.Quantity > 0).Sum(s => s.Quantity * s.UnitPrice)), 
                               @(Model.Stocks.Where(s => s.Quantity == 0).Sum(s => s.Quantity * s.UnitPrice))],
                        backgroundColor: [
                            'rgba(40, 167, 69, 0.8)',
                            'rgba(255, 193, 7, 0.8)',
                            'rgba(220, 53, 69, 0.8)'
                        ],
                        borderColor: [
                            '#28a745',
                            '#ffc107',
                            '#dc3545'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return '₺' + value.toLocaleString();
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
} 

