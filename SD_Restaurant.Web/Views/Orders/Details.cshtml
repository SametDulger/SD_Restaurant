@model SD_Restaurant.Web.Models.OrderViewModel

@{
    ViewData["Title"] = "Sipariş Detayı";
}

<div class="container-fluid fade-in">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-gradient">
                        <i class="fas fa-receipt me-2"></i>Sipariş Detayı
                    </h1>
                    <p class="text-muted mb-0">Sipariş #@Model.Id bilgileri</p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>Düzenle
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Sipariş #@Model.Id Bilgileri
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4 text-muted">Sipariş Numarası:</dt>
                                <dd class="col-sm-8"><strong>@Model.OrderNumber</strong></dd>

                                <dt class="col-sm-4 text-muted">Müşteri:</dt>
                                <dd class="col-sm-8"><strong>@Model.CustomerName</strong></dd>

                                <dt class="col-sm-4 text-muted">Masa:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">@Model.TableNumber</span>
                                </dd>

                                <dt class="col-sm-4 text-muted">Personel:</dt>
                                <dd class="col-sm-8">@Model.EmployeeName</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4 text-muted">Sipariş Tarihi:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-success">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</span>
                                </dd>

                                <dt class="col-sm-4 text-muted">Durum:</dt>
                                <dd class="col-sm-8">
                                    @{
                                        var statusClass = Model.Status switch
                                        {
                                            "Completed" => "success",
                                            "InPreparation" => "warning",
                                            "Pending" => "info",
                                            "Cancelled" => "danger",
                                            _ => "secondary"
                                        };
                                        var statusText = Model.Status switch
                                        {
                                            "Completed" => "Tamamlandı",
                                            "InPreparation" => "Hazırlanıyor",
                                            "Pending" => "Beklemede",
                                            "Cancelled" => "İptal Edildi",
                                            _ => Model.Status
                                        };
                                    }
                                    <span class="badge bg-@statusClass">@statusText</span>
                                </dd>

                                <dt class="col-sm-4 text-muted">Ara Toplam:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-primary">@Model.TotalAmount.ToString("C")</span>
                                </dd>

                                <dt class="col-sm-4 text-muted">KDV:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-warning">@Model.TaxAmount.ToString("C")</span>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <div class="mt-4">
                        <dl class="row">
                            <dt class="col-sm-3 text-muted">İndirim:</dt>
                            <dd class="col-sm-9">
                                <span class="badge bg-danger">@Model.DiscountAmount.ToString("C")</span>
                            </dd>

                            <dt class="col-sm-3 text-muted">Genel Toplam:</dt>
                            <dd class="col-sm-9">
                                <span class="badge bg-success fs-5">@((Model.TotalAmount + Model.TaxAmount - Model.DiscountAmount).ToString("C"))</span>
                            </dd>
                        </dl>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mt-4">
                            <h5 class="text-primary">ğŸ“ Notlar</h5>
                            <div class="bg-light p-3 rounded">
                                @Model.Notes
                            </div>
                        </div>
                    }

                    <div class="mt-4">
                        <dl class="row">
                            <dt class="col-sm-3 text-muted">Oluşturulma Tarihi:</dt>
                            <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>

                            @if (Model.UpdatedDate.HasValue)
                            {
                                <dt class="col-sm-3 text-muted">Güncellenme Tarihi:</dt>
                                <dd class="col-sm-9">@Model.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                            }
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2"></i>Sipariş Özeti
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="display-4 text-primary">@((Model.TotalAmount + Model.TaxAmount - Model.DiscountAmount).ToString("C"))</div>
                        <div class="text-muted">Genel Toplam</div>
                    </div>
                    
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Ara Toplam</span>
                            <span class="badge bg-primary">@Model.TotalAmount.ToString("C")</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>KDV</span>
                            <span class="badge bg-warning">@Model.TaxAmount.ToString("C")</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>İndirim</span>
                            <span class="badge bg-danger">@Model.DiscountAmount.ToString("C")</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Durum</span>
                            <span class="badge bg-@statusClass">@statusText</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-tools me-2"></i>Hızlı İşlemler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class="fas fa-edit me-2"></i>Sipariş Düzenle
                        </a>
                        <a asp-controller="Tables" asp-action="Details" asp-route-id="@Model.TableId" class="btn btn-outline-info">
                            <i class="fas fa-chair me-2"></i>Masa Detayı
                        </a>
                        <a asp-controller="Customers" asp-action="Details" asp-route-id="@Model.CustomerId" class="btn btn-outline-success">
                            <i class="fas fa-user me-2"></i>Müşteri Detayı
                        </a>
                        <a asp-controller="Payments" asp-action="Create" asp-route-orderId="@Model.Id" class="btn btn-outline-warning">
                            <i class="fas fa-credit-card me-2"></i>Ödeme Al
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 


