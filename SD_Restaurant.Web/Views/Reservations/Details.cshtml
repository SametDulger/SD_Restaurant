@model SD_Restaurant.Web.Models.ReservationViewModel

@{
    ViewData["Title"] = "Rezervasyon Detayı";
}

<div class="container">
    <h2>Rezervasyon Detayı</h2>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Rezervasyon #@Model.Id</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Rezervasyon ID:</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                        <dt class="col-sm-3">Masa:</dt>
                        <dd class="col-sm-9">@Model.TableNumber</dd>

                        <dt class="col-sm-3">Müşteri Adı:</dt>
                        <dd class="col-sm-9">@Model.CustomerName</dd>

                        <dt class="col-sm-3">Müşteri Telefonu:</dt>
                        <dd class="col-sm-9">@Model.CustomerPhone</dd>

                        <dt class="col-sm-3">Rezervasyon Tarihi:</dt>
                        <dd class="col-sm-9">@Model.ReservationDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-3">Saat:</dt>
                        <dd class="col-sm-9">@Model.ReservationTime.ToString("HH:mm")</dd>

                        <dt class="col-sm-3">Kişi Sayısı:</dt>
                        <dd class="col-sm-9">@Model.NumberOfGuests kişi</dd>

                        <dt class="col-sm-3">Durum:</dt>
                        <dd class="col-sm-9">
                            <span class="badge badge-@(Model.Status == "Onaylandı" ? "success" : Model.Status == "Beklemede" ? "warning" : "danger")">
                                @Model.Status
                            </span>
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.SpecialRequests))
                        {
                            <dt class="col-sm-3">Özel İstekler:</dt>
                            <dd class="col-sm-9">@Model.SpecialRequests</dd>
                        }

                        <dt class="col-sm-3">Aktif mi:</dt>
                        <dd class="col-sm-9">@(Model.IsActive ? "Evet" : "Hayır")</dd>

                        <dt class="col-sm-3">Oluşturulma Tarihi:</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>

                        @if (Model.UpdatedDate.HasValue)
                        {
                            <dt class="col-sm-3">Güncellenme Tarihi:</dt>
                            <dd class="col-sm-9">@Model.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Sil</a>
    </div>
</div> 