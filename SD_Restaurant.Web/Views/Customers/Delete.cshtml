@model SD_Restaurant.Web.Models.CustomerViewModel

@{
    ViewData["Title"] = "Müşteri Sil";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Müşteri Sil</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4>Bu müşteriyi silmek istediğinizden emin misiniz?</h4>
                    </div>
                    
                    <dl class="row">
                        <dt class="col-sm-2">ID</dt>
                        <dd class="col-sm-10">@Model.Id</dd>
                        
                        <dt class="col-sm-2">Ad</dt>
                        <dd class="col-sm-10">@Model.FirstName</dd>
                        
                        <dt class="col-sm-2">Soyad</dt>
                        <dd class="col-sm-10">@Model.LastName</dd>
                        
                        <dt class="col-sm-2">E-posta</dt>
                        <dd class="col-sm-10">@Model.Email</dd>
                        
                        <dt class="col-sm-2">Telefon</dt>
                        <dd class="col-sm-10">@Model.Phone</dd>
                        
                        <dt class="col-sm-2">Adres</dt>
                        <dd class="col-sm-10">@Model.Address</dd>
                    </dl>
                    
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Sil" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 