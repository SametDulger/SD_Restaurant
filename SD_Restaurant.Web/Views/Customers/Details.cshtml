@model SD_Restaurant.Web.Models.CustomerViewModel

@{
    ViewData["Title"] = "Müşteri Detayı";
}

<div class="container-fluid fade-in">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-gradient">
                        <i class="fas fa-user me-2"></i>Müşteri Detayı
                    </h1>
                    <p class="text-muted mb-0">@Model.FirstName @Model.LastName bilgileri</p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>Düzenle
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>@Model.FirstName @Model.LastName Bilgileri
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4 text-muted">Müşteri ID:</dt>
                                <dd class="col-sm-8"><strong>@Model.Id</strong></dd>

                                <dt class="col-sm-4 text-muted">Ad:</dt>
                                <dd class="col-sm-8"><strong>@Model.FirstName</strong></dd>

                                <dt class="col-sm-4 text-muted">Soyad:</dt>
                                <dd class="col-sm-8"><strong>@Model.LastName</strong></dd>

                                <dt class="col-sm-4 text-muted">E-posta:</dt>
                                <dd class="col-sm-8">@Model.Email</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4 text-muted">Telefon:</dt>
                                <dd class="col-sm-8">@Model.Phone</dd>

                                <dt class="col-sm-4 text-muted">Müşteri Tipi:</dt>
                                <dd class="col-sm-8">
                                    @{
                                        var customerTypeClass = Model.CustomerType switch
                                        {
                                            "Regular" => "info",
                                            "VIP" => "warning",
                                            "Corporate" => "success",
                                            "New" => "secondary",
                                            _ => "primary"
                                        };
                                        var customerTypeText = Model.CustomerType switch
                                        {
                                            "Regular" => "Düzenli",
                                            "VIP" => "VIP",
                                            "Corporate" => "Kurumsal",
                                            "New" => "Yeni",
                                            _ => Model.CustomerType
                                        };
                                    }
                                    <span class="badge bg-@customerTypeClass">@customerTypeText</span>
                                </dd>

                                <dt class="col-sm-4 text-muted">Aktif mi:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success"><i class="fas fa-check me-1"></i>Evet</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger"><i class="fas fa-times me-1"></i>Hayır</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <div class="mt-4">
                            <h5 class="text-primary">ğŸ“ Adres</h5>
                            <div class="bg-light p-3 rounded">
                                @Model.Address
                            </div>
                        </div>
                    }

                    <div class="mt-4">
                        <dl class="row">
                            <dt class="col-sm-3 text-muted">Oluşturulma Tarihi:</dt>
                            <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>

                            @if (Model.UpdatedDate.HasValue)
                            {
                                <dt class="col-sm-3 text-muted">Güncellenme Tarihi:</dt>
                                <dd class="col-sm-9">@Model.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                            }
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2"></i>Müşteri Özeti
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="display-4 text-primary">@customerTypeText</div>
                        <div class="text-muted">Müşteri Tipi</div>
                    </div>
                    
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Müşteri Tipi</span>
                            <span class="badge bg-@customerTypeClass">@customerTypeText</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Durum</span>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Pasif</span>
                            }
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>E-posta</span>
                            <span class="badge bg-info">@(string.IsNullOrEmpty(Model.Email) ? "Yok" : "Var")</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Telefon</span>
                            <span class="badge bg-primary">@(string.IsNullOrEmpty(Model.Phone) ? "Yok" : "Var")</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-tools me-2"></i>Hızlı İşlemler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class="fas fa-edit me-2"></i>Müşteri Düzenle
                        </a>
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <a href="mailto:@Model.Email" class="btn btn-outline-info">
                                <i class="fas fa-envelope me-2"></i>E-posta Gönder
                            </a>
                        }
                        @if (!string.IsNullOrEmpty(Model.Phone))
                        {
                            <a href="tel:@Model.Phone" class="btn btn-outline-success">
                                <i class="fas fa-phone me-2"></i>Ara
                            </a>
                        }
                        <a asp-controller="Orders" asp-action="Create" asp-route-customerId="@Model.Id" class="btn btn-outline-warning">
                            <i class="fas fa-plus me-2"></i>Sipariş Oluştur
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 


