@model SD_Restaurant.Web.Models.TableViewModel

@{
    ViewData["Title"] = "Masa Detayı";
}

<div class="container">
    <h2>Masa Detayı</h2>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Masa @Model.TableNumber</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Masa ID:</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                        <dt class="col-sm-3">Masa Numarası:</dt>
                        <dd class="col-sm-9">@Model.TableNumber</dd>

                        <dt class="col-sm-3">Kapasite:</dt>
                        <dd class="col-sm-9">@Model.Capacity kişi</dd>

                        <dt class="col-sm-3">Durum:</dt>
                        <dd class="col-sm-9">
                            <span class="badge badge-@(Model.Status == "Boş" ? "success" : Model.Status == "Dolu" ? "danger" : "warning")">
                                @Model.Status
                            </span>
                        </dd>

                        <dt class="col-sm-3">Konum:</dt>
                        <dd class="col-sm-9">@Model.Location</dd>

                        <dt class="col-sm-3">Aktif mi:</dt>
                        <dd class="col-sm-9">@(Model.IsActive ? "Evet" : "Hayır")</dd>

                        <dt class="col-sm-3">Oluşturulma Tarihi:</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>

                        @if (Model.UpdatedDate.HasValue)
                        {
                            <dt class="col-sm-3">Güncellenme Tarihi:</dt>
                            <dd class="col-sm-9">@Model.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Sil</a>
    </div>
</div> 