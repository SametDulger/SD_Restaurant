@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<div class="container-fluid fade-in">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-gradient text-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>Hata Oluştu
                    </h1>
                    <p class="text-muted mb-0">İsteğiniz işlenirken bir hata oluştu</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-bug me-2"></i>Sistem Hatası
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>Hata:</strong> İsteğiniz işlenirken beklenmeyen bir hata oluştu.
                    </div>

                    @if (Model.ShowRequestId)
                    {
                        <div class="mb-4">
                            <h5 class="text-primary">Hata Detayları</h5>
                            <div class="bg-light p-3 rounded">
                                <strong>İstek ID:</strong> 
                                <code class="text-danger">@Model.RequestId</code>
                            </div>
                        </div>
                    }

                    <div class="mb-4">
                        <h5 class="text-warning">Geliştirici Modu</h5>
                        <p class="text-muted">
                            <strong>Development</strong> ortamına geçiş yaparak hatanın detaylı bilgilerini görebilirsiniz.
                        </p>
                        <div class="alert alert-warning">
                            <i class="fas fa-warning me-2"></i>
                            <strong>Önemli:</strong> Development ortamı production uygulamalarında etkinleştirilmemelidir. 
                            Bu, kullanıcılara hassas bilgilerin görüntülenmesine neden olabilir.
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5 class="text-info">Geliştirici Ayarları</h5>
                        <p class="text-muted">
                            Yerel hata ayıklama için <strong>ASPNETCORE_ENVIRONMENT</strong> ortam değişkenini 
                            <strong>Development</strong> olarak ayarlayın ve uygulamayı yeniden başlatın.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-life-ring me-2"></i>Yardım
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">
                        Bu hata ile ilgili yardım için:
                    </p>
                    <div class="d-grid gap-2">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                            <i class="fas fa-home me-2"></i>Ana Sayfaya Dön
                        </a>
                        <a href="mailto:support@sdrestaurant.com" class="btn btn-outline-success">
                            <i class="fas fa-envelope me-2"></i>Destek E-posta
                        </a>
                        <a href="tel:+902121234567" class="btn btn-outline-info">
                            <i class="fas fa-phone me-2"></i>Destek Ara
                        </a>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-clock me-2"></i>Son İşlemler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Sayfa Yükleme</span>
                            <span class="badge bg-secondary">@DateTime.Now.ToString("HH:mm")</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Hata Tespiti</span>
                            <span class="badge bg-danger">@DateTime.Now.ToString("HH:mm")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


