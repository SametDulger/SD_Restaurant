<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SD Restaurant</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-utensils"></i> SD Restaurant
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-cogs"></i> Yönetim
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index">
                                    <i class="fas fa-tags"></i> Kategoriler
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Products" asp-action="Index">
                                    <i class="fas fa-box"></i> Ürünler
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Recipes" asp-action="Index">
                                    <i class="fas fa-book-open"></i> Tarifler
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Stocks" asp-action="Index">
                                    <i class="fas fa-warehouse"></i> Stoklar
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="restaurantDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-concierge-bell"></i> Restoran
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="restaurantDropdown">
                                <li><a class="dropdown-item" asp-controller="Tables" asp-action="Index">
                                    <i class="fas fa-chair"></i> Masalar
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Customers" asp-action="Index">
                                    <i class="fas fa-users"></i> Müşteriler
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Employees" asp-action="Index">
                                    <i class="fas fa-user-tie"></i> Çalışanlar
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Reservations" asp-action="Index">
                                    <i class="fas fa-calendar-check"></i> Rezervasyonlar
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="ordersDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-shopping-cart"></i> Siparişler
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="ordersDropdown">
                                <li><a class="dropdown-item" asp-controller="Orders" asp-action="Index">
                                    <i class="fas fa-list"></i> Tüm Siparişler
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Payments" asp-action="Index">
                                    <i class="fas fa-credit-card"></i> Ödemeler
                                </a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SD Restaurant - <a asp-area="" asp-controller="Home" asp-action="Privacy">Gizlilik</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
