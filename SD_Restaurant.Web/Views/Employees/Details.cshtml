@model SD_Restaurant.Web.Models.EmployeeViewModel

@{
    ViewData["Title"] = "Personel Detayı";
}

<div class="container">
    <h2>Personel Detayı</h2>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@Model.FirstName @Model.LastName</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Personel ID:</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                        <dt class="col-sm-3">Ad:</dt>
                        <dd class="col-sm-9">@Model.FirstName</dd>

                        <dt class="col-sm-3">Soyad:</dt>
                        <dd class="col-sm-9">@Model.LastName</dd>

                        <dt class="col-sm-3">E-posta:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Telefon:</dt>
                        <dd class="col-sm-9">@Model.Phone</dd>

                        <dt class="col-sm-3">Pozisyon:</dt>
                        <dd class="col-sm-9">@Model.Position</dd>

                        <dt class="col-sm-3">Rol:</dt>
                        <dd class="col-sm-9">@Model.Role</dd>

                        <dt class="col-sm-3">Departman:</dt>
                        <dd class="col-sm-9">@Model.Department</dd>

                        <dt class="col-sm-3">Aktif mi:</dt>
                        <dd class="col-sm-9">@(Model.IsActive ? "Evet" : "Hayır")</dd>

                        <dt class="col-sm-3">Oluşturulma Tarihi:</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>

                        @if (Model.UpdatedDate.HasValue)
                        {
                            <dt class="col-sm-3">Güncellenme Tarihi:</dt>
                            <dd class="col-sm-9">@Model.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Sil</a>
    </div>
</div> 