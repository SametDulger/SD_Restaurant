@model IEnumerable<SD_Restaurant.Web.Models.IngredientViewModel>

@{
    ViewData["Title"] = "Malzemeler";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-dark">
                <i class="fas fa-carrot me-2"></i>Malzemeler
            </h1>
            <p class="text-muted">Restaurant malzemelerinin yönetimi</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Yeni Malzeme
            </a>
        </div>
    </div>

    <!-- Search Bar -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Search" method="get" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" name="term" class="form-control" placeholder="Malzeme adı ile ara..." 
                               value="@ViewBag.SearchTerm">
                        <button type="submit" class="btn btn-outline-primary">Ara</button>
                    </div>
                </div>
                <div class="col-md-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Temizle
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Ingredients Grid -->
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var ingredient in Model)
            {
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow-sm h-100 py-2">
                        <div class="card-body">
                            <div class="row g-0 align-items-center">
                                <div class="col me-2">
                                    <div class="small fw-bold text-primary text-uppercase mb-1">
                                        @ingredient.Name
                                    </div>
                                    <div class="h6 mb-0 fw-bold text-dark">
                                        @ingredient.CurrentStock @ingredient.Unit
                                    </div>
                                    <div class="small text-muted">
                                        Maliyet: @ingredient.Cost.ToString("C")
                                    </div>
                                    @if (!string.IsNullOrEmpty(ingredient.StockLocation))
                                    {
                                        <div class="small text-muted">
                                            <i class="fas fa-map-marker-alt me-1"></i>@ingredient.StockLocation
                                        </div>
                                    }
                                    <div class="mt-2">
                                        @if (ingredient.IsActive)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Pasif</span>
                                        }
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-carrot fa-2x text-muted"></i>
                                </div>
                            </div>
                            <div class="mt-3">
                                <div class="btn-group btn-group-sm w-100" role="group">
                                    <a asp-action="Details" asp-route-id="@ingredient.Id" 
                                       class="btn btn-outline-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@ingredient.Id" 
                                       class="btn btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@ingredient.Id" 
                                       class="btn btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-carrot fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Henüz malzeme bulunmuyor</h5>
                        <p class="text-muted">İlk malzemenizi eklemek için aşağıdaki butonu kullanın.</p>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Yeni Malzeme Ekle
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Statistics Cards -->
    @if (Model.Any())
    {
        <div class="row mt-4">
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow-sm h-100 py-2">
                    <div class="card-body">
                        <div class="row g-0 align-items-center">
                            <div class="col me-2">
                                <div class="small fw-bold text-success text-uppercase mb-1">
                                    Toplam Malzeme
                                </div>
                                <div class="h5 mb-0 fw-bold text-dark">
                                    @Model.Count()
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-carrot fa-2x text-muted"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-info shadow-sm h-100 py-2">
                    <div class="card-body">
                        <div class="row g-0 align-items-center">
                            <div class="col me-2">
                                <div class="small fw-bold text-info text-uppercase mb-1">
                                    Aktif Malzeme
                                </div>
                                <div class="h5 mb-0 fw-bold text-dark">
                                    @Model.Count(i => i.IsActive)
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-check-circle fa-2x text-muted"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow-sm h-100 py-2">
                    <div class="card-body">
                        <div class="row g-0 align-items-center">
                            <div class="col me-2">
                                <div class="small fw-bold text-warning text-uppercase mb-1">
                                    Toplam Stok
                                </div>
                                <div class="h5 mb-0 fw-bold text-dark">
                                    @Model.Sum(i => i.CurrentStock)
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-boxes fa-2x text-muted"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-danger shadow-sm h-100 py-2">
                    <div class="card-body">
                        <div class="row g-0 align-items-center">
                            <div class="col me-2">
                                <div class="small fw-bold text-danger text-uppercase mb-1">
                                    Toplam Maliyet
                                </div>
                                <div class="h5 mb-0 fw-bold text-dark">
                                    @Model.Sum(i => i.Cost * i.CurrentStock).ToString("C")
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-dollar-sign fa-2x text-muted"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-refresh search results
        $(document).ready(function() {
            $('input[name="term"]').on('keyup', function() {
                if ($(this).val().length >= 3) {
                    $(this).closest('form').submit();
                }
            });
        });
    </script>
} 


