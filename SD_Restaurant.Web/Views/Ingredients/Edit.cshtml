@model SD_Restaurant.Web.Models.IngredientViewModel

@{
    ViewData["Title"] = "Malzeme Düzenle";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-dark">
                <i class="fas fa-edit me-2"></i>Malzeme Düzenle
            </h1>
            <p class="text-muted">@Model.Name malzemesinin bilgilerini güncelleyin</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Geri Dön
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-carrot me-2"></i>Malzeme Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreatedDate" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Malzeme Adı *</label>
                                    <input asp-for="Name" class="form-control" placeholder="Örn: Domates, Soğan, Et...">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Unit" class="form-label">Birim *</label>
                                    <select asp-for="Unit" class="form-select">
                                        <option value="">Birim seçin</option>
                                        <option value="kg">Kilogram (kg)</option>
                                        <option value="g">Gram (g)</option>
                                        <option value="l">Litre (l)</option>
                                        <option value="ml">Mililitre (ml)</option>
                                        <option value="adet">Adet</option>
                                        <option value="paket">Paket</option>
                                        <option value="kutu">Kutu</option>
                                        <option value="şişe">Åişe</option>
                                        <option value="deste">Deste</option>
                                    </select>
                                    <span asp-validation-for="Unit" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Cost" class="form-label">Birim Maliyet</label>
                                    <div class="input-group">
                                        <input asp-for="Cost" class="form-control" type="number" step="0.01" placeholder="0.00">
                                        <span class="input-group-text">₺</span>
                                    </div>
                                    <span asp-validation-for="Cost" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CurrentStock" class="form-label">Mevcut Stok</label>
                                    <input asp-for="CurrentStock" class="form-control" type="number" step="0.01" placeholder="0">
                                    <span asp-validation-for="CurrentStock" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="StockLocation" class="form-label">Stok Lokasyonu</label>
                            <input asp-for="StockLocation" class="form-control" placeholder="Örn: Soğuk Hava Deposu, Raflar...">
                            <span asp-validation-for="StockLocation" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="3" 
                                      placeholder="Malzeme hakkında detaylı bilgi..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox">
                                <label asp-for="IsActive" class="form-check-label">
                                    Malzeme aktif olsun
                                </label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Malzeme Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8">@Model.Id</dd>
                        
                        <dt class="col-sm-4">Oluşturulma:</dt>
                        <dd class="col-sm-8">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>
                        
                        @if (Model.UpdatedDate.HasValue)
                        {
                            <dt class="col-sm-4">Güncellenme:</dt>
                            <dd class="col-sm-8">@Model.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                        }
                        
                        <dt class="col-sm-4">Durum:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Pasif</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Uyarı
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning mb-0">
                        <small>
                            <strong>Dikkat:</strong> Malzeme bilgilerini değiştirirken dikkatli olun. 
                            Bu değişiklikler reçeteleri ve stok takibini etkileyebilir.
                        </small>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-trash me-2"></i>Tehlikeli İşlem
                    </h5>
                </div>
                <div class="card-body">
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger w-100">
                        <i class="fas fa-trash me-2"></i>Malzemeyi Sil
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Auto-format cost input
            $('#Cost').on('input', function() {
                var value = parseFloat($(this).val());
                if (!isNaN(value)) {
                    $(this).val(value.toFixed(2));
                }
            });

            // Auto-format stock input
            $('#CurrentStock').on('input', function() {
                var value = parseFloat($(this).val());
                if (!isNaN(value)) {
                    $(this).val(value.toFixed(2));
                }
            });
        });
    </script>
} 


