@model SD_Restaurant.Web.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Şifre Değiştir";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark text-center">
                    <h4 class="mb-0">
                        <i class="fas fa-key me-2"></i>Şifre Değiştir
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="ChangePassword" method="post">
                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label">
                                <i class="fas fa-lock me-1"></i>@Html.DisplayNameFor(m => m.CurrentPassword)
                            </label>
                            <input asp-for="CurrentPassword" class="form-control" placeholder="Mevcut şifrenizi giriniz" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">
                                <i class="fas fa-lock me-1"></i>@Html.DisplayNameFor(m => m.NewPassword)
                            </label>
                            <input asp-for="NewPassword" class="form-control" placeholder="Yeni şifrenizi giriniz" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmNewPassword" class="form-label">
                                <i class="fas fa-lock me-1"></i>@Html.DisplayNameFor(m => m.ConfirmNewPassword)
                            </label>
                            <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Yeni şifrenizi tekrar giriniz" />
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-key me-2"></i>Şifreyi Değiştir
                            </button>
                        </div>
                    </form>

                    <hr class="my-4" />

                    <div class="text-center">
                        <a asp-action="Profile" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Profile Dön
                        </a>
                    </div>
                </div>
            </div>

            <div class="card mt-3 border-0 bg-light">
                <div class="card-body">
                    <h6 class="text-muted mb-2">
                        <i class="fas fa-info-circle me-1"></i>Şifre Güvenliği
                    </h6>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1">
                            <small class="text-muted">
                                <i class="fas fa-check text-success me-1"></i>En az 6 karakter olmalı
                            </small>
                        </li>
                        <li class="mb-1">
                            <small class="text-muted">
                                <i class="fas fa-check text-success me-1"></i>Büyük ve küçük harf içermeli
                            </small>
                        </li>
                        <li class="mb-1">
                            <small class="text-muted">
                                <i class="fas fa-check text-success me-1"></i>Rakam içermeli
                            </small>
                        </li>
                        <li>
                            <small class="text-muted">
                                <i class="fas fa-check text-success me-1"></i>Özel karakter içermeli
                            </small>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 