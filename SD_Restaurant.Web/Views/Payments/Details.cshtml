@model SD_Restaurant.Web.Models.PaymentViewModel

@{
    ViewData["Title"] = "Ödeme Detayı";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-dark">
                <i class="fas fa-credit-card me-2"></i>Ödeme Detayı
            </h1>
            <p class="text-muted">Ödeme bilgileri ve detayları</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Geri Dön
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Ödeme Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4 text-muted">Ödeme ID:</dt>
                                <dd class="col-sm-8">
                                    <strong>#@Model.Id</strong>
                                </dd>

                                <dt class="col-sm-4 text-muted">Sipariş No:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">@Model.OrderNumber</span>
                                </dd>

                                <dt class="col-sm-4 text-muted">Ödeme Tutarı:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-success fs-6">@Model.Amount.ToString("C")</span>
                                </dd>

                                <dt class="col-sm-4 text-muted">Ödeme Yöntemi:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-warning">@Model.PaymentMethod</span>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4 text-muted">Durum:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Status == "Completed")
                                    {
                                        <span class="badge bg-success">Tamamlandı</span>
                                    }
                                    else if (Model.Status == "Pending")
                                    {
                                        <span class="badge bg-warning">Beklemede</span>
                                    }
                                    else if (Model.Status == "Failed")
                                    {
                                        <span class="badge bg-danger">Başarısız</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@Model.Status</span>
                                    }
                                </dd>

                                <dt class="col-sm-4 text-muted">Ödeme Tarihi:</dt>
                                <dd class="col-sm-8">@Model.PaymentDate.ToString("dd/MM/yyyy HH:mm")</dd>

                                <dt class="col-sm-4 text-muted">Sipariş ID:</dt>
                                <dd class="col-sm-8">@Model.OrderId</dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mt-4">
                            <h6 class="text-primary">ğŸ“ Notlar</h6>
                            <div class="bg-light p-3 rounded">
                                @Model.Notes
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Payment Analysis -->
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2"></i>Ödeme Analizi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="border-end">
                                <div class="h4 text-primary">@Model.Amount.ToString("C")</div>
                                <div class="text-muted">Ödeme Tutarı</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="border-end">
                                <div class="h4 text-warning">@Model.PaymentMethod</div>
                                <div class="text-muted">Ödeme Yöntemi</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="h4 text-success">@Model.PaymentDate.ToString("dd/MM/yyyy")</div>
                            <div class="text-muted">Ödeme Tarihi</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-pie me-2"></i>Ödeme Özeti
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <i class="fas fa-credit-card fa-3x text-primary mb-2"></i>
                        <h5>Ödeme #@Model.Id</h5>
                        <p class="text-muted">@Model.OrderNumber</p>
                    </div>
                    
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Ödeme Tutarı</span>
                            <span class="badge bg-success">@Model.Amount.ToString("C")</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Ödeme Yöntemi</span>
                            <span class="badge bg-warning">@Model.PaymentMethod</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Durum</span>
                            @if (Model.Status == "Completed")
                            {
                                <span class="badge bg-success">Tamamlandı</span>
                            }
                            else if (Model.Status == "Pending")
                            {
                                <span class="badge bg-warning">Beklemede</span>
                            }
                            else if (Model.Status == "Failed")
                            {
                                <span class="badge bg-danger">Başarısız</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@Model.Status</span>
                            }
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Ödeme Tarihi</span>
                            <span class="badge bg-info">@Model.PaymentDate.ToString("dd/MM/yyyy")</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-tools me-2"></i>Hızlı İşlemler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class="fas fa-edit me-2"></i>Ödeme Düzenle
                        </a>
                        <a asp-controller="Orders" asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-outline-info">
                            <i class="fas fa-shopping-cart me-2"></i>Sipariş Detayı
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                            <i class="fas fa-trash me-2"></i>Ödemeyi Sil
                        </a>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-receipt me-2"></i>Makbuz
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <i class="fas fa-receipt fa-2x text-info mb-2"></i>
                        <p class="mb-0">Ödeme makbuzu yazdırılabilir</p>
                        <button class="btn btn-outline-info btn-sm mt-2">
                            <i class="fas fa-print me-2"></i>Yazdır
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 


